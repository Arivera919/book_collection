<h1>Books#delete</h1>

<%= link_to('Back', books_path, class: 'back-button') %>

<div class='books delete'>
    <h2>Delete Book</h2>

    <%= form_for(@book, method: 'delete') do |f| %>

        <p>Are you sure you want to permanently delete this task?</p>
        <p><%= @book.title %></p>

        <div class="form-button">
            <%= f.submit("Delete Book") %>
        </div>
    <% end %>
</div>