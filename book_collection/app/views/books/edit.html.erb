<h1>Books#edit</h1>

<%= link_to('Back', books_path, class: 'back-button') %>

<div class="books edit">
    <h2>Edit Book</h2>

    <%= form_for(@book) do |f| %>

        <%= render(partial: 'form', locals: {f: f}) %>

        <div class="form-button">
            <%= f.submit("Edit Book") %>
        </div>
    <% end %>
</div>